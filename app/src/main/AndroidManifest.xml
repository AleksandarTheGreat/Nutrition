<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".Activities.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo_512"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_512"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Nutrition"
        tools:targetApi="31">
        <activity
            android:name=".Activities.IntroductionActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Section3Activity"
            android:exported="false" />
        <activity
            android:name=".Activities.Section1And2Activity"
            android:exported="false" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>