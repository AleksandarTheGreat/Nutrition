<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/imageViewLogoMainActivity"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_new_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.526" />

        <TextView
            android:id="@+id/textViewTitleMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:letterSpacing="-0.02"
            android:text="NUTRITION"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageViewLogoMainActivity"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageViewFlame"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/flame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewTotalDays"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTotalDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="6dp"
            android:text="0"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDaysLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:text="Total days"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/imageViewFlame"
            app:layout_constraintRight_toRightOf="@id/textViewTotalDays"
            app:layout_constraintTop_toBottomOf="@id/textViewTotalDays" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section0LayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/imageViewIconSection0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_study"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSubTitleSection0"
            style="@style/SubTitlePart"
            android:text="Educational"
            app:layout_constraintLeft_toRightOf="@id/imageViewIconSection0"
            app:layout_constraintTop_toTopOf="@id/imageViewIconSection0"
            app:layout_constraintBottom_toBottomOf="@id/imageViewIconSection0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/introductionLayoutMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCardSearchExamples"
                style="@style/MaterialCardIntroductionMainActivityEducational"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewIconSearching"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/icon_searching"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Searching"
                        android:textSize="16sp"
                        android:fontFamily="@font/siracha_regular"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageViewIconSearching" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCardQuiz"
                style="@style/MaterialCardIntroductionMainActivityEducational"
                android:layout_marginHorizontal="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewIconQuiz"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/icon_quiz"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick quiz"
                        android:textSize="16sp"
                        android:fontFamily="@font/siracha_regular"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageViewIconQuiz" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCardDefinitions"
                style="@style/MaterialCardIntroductionMainActivityEducational"
                android:layout_marginHorizontal="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewIconDefinitions"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/icon_definitions2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Definitions"
                        android:textSize="16sp"
                        android:fontFamily="@font/siracha_regular"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageViewIconDefinitions" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCardMythFact"
                style="@style/MaterialCardIntroductionMainActivityEducational"
                android:layout_marginHorizontal="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewIconMythsFacts"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/icon_myth_fact"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Myths / facts"
                        android:textSize="16sp"
                        android:fontFamily="@font/siracha_regular"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageViewIconMythsFacts"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCardMotivationalQuotes"
                style="@style/MaterialCardIntroductionMainActivityEducational"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewIconMotivation"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/icon_motivation"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motivation"
                        android:textSize="16sp"
                        android:fontFamily="@font/siracha_regular"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageViewIconMotivation"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section1LayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/imageViewIconSection1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_nutrition_pyramid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSubTitleSection1"
            style="@style/SubTitlePart"
            android:text="Popular foods"
            app:layout_constraintLeft_toRightOf="@id/imageViewIconSection1"
            app:layout_constraintTop_toTopOf="@id/imageViewIconSection1"
            app:layout_constraintBottom_toBottomOf="@id/imageViewIconSection1"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewPyramids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard1"
                android:tag="Grains"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconGrains"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:src="@drawable/grains"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewGrains"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Grains"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard2"
                android:tag="Vegetables"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconVegetables"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/vegetables"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewVegetables"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Vegetables"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard3"
                android:tag="Fruits"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconFruits"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fruit"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewFruit"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Fruit"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard4"
                android:tag="Meat and Proteins"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconMeatAndProteins"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/meat"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewMeatAndProteins"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Meat"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard5"
                android:tag="Dairy"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconDairy"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/dairy"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewDairy"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Dairy"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard6"
                android:tag="Fats, Oils, and Sweets"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconFatsOilsAndSweets"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fats_oils_sweets"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewSweets"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Sweets"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/matCard7"
                android:tag="Fast Food"
                style="@style/MaterialCardIntroductionMainActivity"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewIconFastFood"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fast_food"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/textViewFastFood"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:text="Fast food"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </HorizontalScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section3LayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/imageViewIconSection3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_days"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSubTitleSection3"
            style="@style/SubTitlePart"
            android:text="Tracking my progress"
            app:layout_constraintLeft_toRightOf="@id/imageViewIconSection3"
            app:layout_constraintTop_toTopOf="@id/imageViewIconSection3"
            app:layout_constraintBottom_toBottomOf="@id/imageViewIconSection3"
            />

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="4dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDaysMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp" />

        <ImageView
            android:id="@+id/imageViewRunning"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_run"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/textViewNoDaysMainActivity"
            />

        <TextView
            android:id="@+id/textViewNoDaysMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:text="You have no days to track, yet" />

        <Button
            android:id="@+id/buttonGetStarted"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewNoDaysMainActivity"
            android:layout_marginTop="12dp"
            android:text="Get started!"
            />

    </RelativeLayout>


</LinearLayout>









