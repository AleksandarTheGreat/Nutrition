<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentADay">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayoutFragmentADay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewFragmentADay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:paddingVertical="8dp"
            android:paddingStart="12dp"
            android:hint="Insert a food you ate today"
            android:background="@drawable/back_for_search_view"
            app:layout_constraintRight_toLeftOf="@id/buttonAddFragmentADay"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/buttonAddFragmentADay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Add"
            style="@style/Widget.Material3.Button.TextButton"
            app:layout_constraintLeft_toRightOf="@id/autoCompleteTextViewFragmentADay"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFragmentADay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/headerLayoutFragmentADay"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="48dp"
        />

    <TextView
        android:id="@+id/textViewNoItemsFragmentADay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="No items for today, yet"
        />

</RelativeLayout>