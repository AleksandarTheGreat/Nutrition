<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentAllDays">

    <RelativeLayout
        android:id="@+id/headerLayoutFragmentAllDays"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/imageViewLogoFragmentAllDays"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/textViewTitleFragmentAllDays"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Le Main Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@id/imageViewLogoFragmentAllDays"
            android:layout_toRightOf="@id/imageViewLogoFragmentAllDays"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Le som quote hair"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_alignBottom="@id/imageViewLogoFragmentAllDays"
            android:layout_toRightOf="@id/imageViewLogoFragmentAllDays"
            />

        <Button
            android:id="@+id/buttonCreateANewDay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="New"
            android:drawableLeft="@drawable/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/Widget.Material3.Button.TextButton"
            />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createDayLayoutFragmentAllDays"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/headerLayoutFragmentAllDays"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/imageViewLogoTrackedDays"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_days"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:text="All of your tracked days"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imageViewLogoTrackedDays"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllDaysFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/createDayLayoutFragmentAllDays"
        />

    <TextView
        android:id="@+id/textViewNoDaysYetFragmentAllDays"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="No days yet"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="4dp"
        />

</RelativeLayout>

