<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragmentAllDays">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerLayoutFragmentAllDays"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:id="@+id/imageViewLogoFragmentAllDays"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_new_logo" />

            <TextView
                android:id="@+id/textViewTitleFragmentAllDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageViewLogoFragmentAllDays"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/imageViewLogoFragmentAllDays"
                android:text="Tracking"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewLogoFragmentAllDays"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/imageViewLogoFragmentAllDays"
                android:text="Macronutrients"
                android:textSize="12sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/relativeLayoutDaysFragmentAllDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewLimitProteins"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Limit Proteins: 105"
                    android:textSize="16sp"
                    android:background="@drawable/back_for_limit_protein"
                    />

                <TextView
                    android:id="@+id/textViewLimitCalories"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Limit Calories: 105"
                    android:textSize="16sp"
                    android:background="@drawable/back_for_limit_calories"
                    />

                <TextView
                    android:id="@+id/textViewLimitCarbs"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Limit Carbs: 105"
                    android:textSize="16sp"
                    android:background="@drawable/back_for_limit_carbs"
                    />

                <TextView
                    android:id="@+id/textViewLimitSugars"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Limit Sugars: 105"
                    android:textSize="16sp"
                    android:background="@drawable/back_for_limit_sugars"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:padding="2dp"
                >

                <Button
                    android:id="@+id/buttonCalculateMacros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calculate Macros"/>

                <Button
                    android:id="@+id/buttonSetManually"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set manually"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    />

            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutGraphFragmentAllDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:id="@+id/imageViewLogoGraph"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_stats"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewStatistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imageViewLogoGraph"
                app:layout_constraintTop_toTopOf="@id/imageViewLogoGraph" />

            <TextView
                android:id="@+id/textViewSub3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Average macro"
                app:layout_constraintBottom_toBottomOf="@id/imageViewLogoGraph"
                app:layout_constraintLeft_toRightOf="@id/imageViewLogoGraph" />

            <TextView
                android:id="@+id/textViewAverage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageViewLogoGraph"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewGraphSelections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGraphFragmentAllDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="-8dp"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/ChipMainActivity"
                    android:tag="Proteins"
                    android:text="Proteins"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    style="@style/ChipMainActivity"
                    android:tag="Calories"
                    android:text="Calories"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    style="@style/ChipMainActivity"
                    android:tag="Carbohydrates"
                    android:text="Carbohydrates"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    style="@style/ChipMainActivity"
                    android:tag="Sugars"
                    android:text="Sugars"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/linearLayoutCustomGraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAddDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="18dp"
        android:src="@drawable/ic_add_dark" />

</RelativeLayout>

