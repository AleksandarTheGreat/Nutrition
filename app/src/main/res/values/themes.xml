<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nutrition" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Nutrition" parent="Base.Theme.Nutrition" />


    <style name="DayThemeNutrition" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="NightThemeNutrition" parent="Theme.Material3.Dark.NoActionBar">

    </style>



    <style name="SubTitlePart" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardFoodPyramid" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginEnd"
            tools:ignore="NewApi">8dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FoodPyramidCategory" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">12dp</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="ChipMainActivity" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>