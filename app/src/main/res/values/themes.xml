<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nutrition" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Theme.Nutrition" parent="Base.Theme.Nutrition">

    </style>


    <style name="NightThemeNutrition" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <!--
            for Material card view background
            <item name="colorSurface">@color/black</item>
         -->
    </style>

    <style name="DayThemeNutrition" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:background">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>



    <style name="SubTitlePart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardFoodPyramid">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd"
            tools:ignore="NewApi">8dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FoodPyramidCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">12dp</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="ChipMainActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MaterialCardIntroductionMainActivity">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">0.3dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MaterialCardIntroductionMainActivityEducational">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Not actually used anywhere -->
    <style name="CustomProgressDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="backgroundColor">@color/greenLight</item>
        <item name="cornerRadius">30dp</item>
        <item name="cardCornerRadius">30dp</item>
    </style>

</resources>